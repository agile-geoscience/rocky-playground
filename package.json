{
  "name": "rocky-playground",
  "version": "2021.09.00",
  "description": "A neural network playground for earth scientists",
  "keywords": ["geology", "geophysics", "machine learning", "neural networks"],
  "author": "Agile Scientific <hello@agilescientific.com> (https://agilescientific.com)",
  "license": "Apache 2",
  "bugs": {
    "url": "https://github.com/agile-geoscience/rocky-playground/issues"
  },
  "homepage": "https://playground.geosci.ai/",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "make-dir": "mkdirp dist",
    "build-lib": "concat node_modules/material-design-lite/material.min.js node_modules/seedrandom/seedrandom.min.js > dist/lib.js",
    "build-css": "concat node_modules/material-design-lite/material.min.css styles.css > dist/bundle.css",
    "watch-css": "concat node_modules/material-design-lite/material.min.css styles.css -o dist/bundle.css",
    "build-html": "copyfiles index.html dist",
    "watch-html": "concat index.html -o dist/index.html",
    "build-js": "browserify src/playground.ts -p [tsify] | uglifyjs -c > dist/bundle.js",
    "watch-js": "watchify src/playground.ts -p [tsify] -v --debug -o dist/bundle.js",
    "prep": "npm run make-dir",
    "build": "npm run build-lib && npm run build-js && npm run build-css && npm run build-html",
    "watch": "npm run build-lib && concurrently \"npm run watch-js\" \"npm run watch-css\" \"npm run watch-html\"",
    "serve": "npx serve dist/",
    "serve-watch": "concurrently \"npx serve dist/\" \"npm run watch\""
  },
  "devDependencies": {
    "@types/d3": "^3.5.34",
    "concat": "^1.0.3",
    "concurrently": "3.1.0",
    "copyfiles": "1.0.0",
    "mkdirp": "^1.0.4",
    "rimraf": "2.5.4",
    "serve": "^12.0.1",
    "tsify": "^4.0.0",
    "typescript": "^2.9",
    "uglify-js": "^3.4.10",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "d3": "^3.5.16",
    "material-design-lite": "^1.3.0",
    "prismjs": "^1.24.1",
    "seedrandom": "^2.4.3"
  }
}
